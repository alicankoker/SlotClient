{
  "name": "slotclient-monorepo",
  "version": "0.3.0",
  "description": "Slot Client Monorepo - Engine, Nexus, and Game packages",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "pnpm --filter @slotclient/diamond-diggers start",
    "dev": "pnpm --filter @slotclient/diamond-diggers start",
    "build": "pnpm --recursive build",
    "build:types": "pnpm --filter @slotclient/types build",
    "build:engine": "pnpm --filter @slotclient/engine build",
    "build:nexus": "pnpm --filter @slotclient/nexus build",
    "build:communication": "pnpm --filter @slotclient/communication build",
    "build:config": "pnpm --filter @slotclient/config build",
    "build:server": "pnpm --filter @slotclient/server build",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "create-game": "node scripts/create-game.js"
  },
  "keywords": [
    "slot",
    "game",
    "pixi",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=17.0.0",
    "pnpm": ">=7.0.0"
  }
}
