{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noEmit": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@slotclient/engine": ["../engine/src"],
      "@slotclient/engine/*": ["../engine/src/*"],
      "@slotclient/config": ["../config/src"],
      "@slotclient/config/*": ["../config/src/*"],
      "@slotclient/communication": ["../communication/src"],
      "@slotclient/communication/*": ["../communication/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
