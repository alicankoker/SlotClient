{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noEmit": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@slotclient/engine": ["../engine/src"],
      "@slotclient/engine/*": ["../engine/src/*"],
      "@slotclient/nexus": ["../nexus/src"],
      "@slotclient/nexus/*": ["../nexus/src/*"],
      "@slotclient/config": ["../config/src"],
      "@slotclient/config/*": ["../config/src/*"],
      "@slotclient/diamond-diggers": ["../games/diamondDiggers/src"],
      "@slotclient/diamond-diggers/*": ["../games/diamondDiggers/src/*"],
      "@slotclient/server": ["../server/src"],
      "@slotclient/server/*": ["../server/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    { "path": "../engine" },
    { "path": "../nexus" },
    { "path": "../config" },
    { "path": "../types" },
    { "path": "../server" }
  ]
}
